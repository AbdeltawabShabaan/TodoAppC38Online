<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/list_item_radius"
    >
    <View
        android:id="@+id/vertical_view"
        android:layout_width="5dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/blue"
        />
    <TextView
        android:id="@+id/todo_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="play Pasketball"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/vertical_view"
        android:paddingHorizontal="8dp"
        />
    <ImageView
        android:id="@+id/ic_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clock"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@id/todo_time_text"
        app:layout_constraintBottom_toBottomOf="@id/todo_time_text"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toStartOf="@id/todo_time_text"
        app:layout_constraintStart_toEndOf="@id/vertical_view"
        />
    <TextView
        android:id="@+id/todo_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 : 20AM"
        app:layout_constraintTop_toBottomOf="@id/todo_title_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_clock"
        android:textSize="20sp"
        android:padding="8dp"
        />
    <ImageView
        android:id="@+id/ic_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_check_style"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="30dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>